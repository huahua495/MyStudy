<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Edittext and editInputLayout" />

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Material Design Login" />

        <Button
            android:id="@+id/btn_leftMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Material Design NavigationView" />

        <Button
            android:id="@+id/btn_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Material Design ToolBar" />

        <Button
            android:id="@+id/btn_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="Material Design TabLayout" />

        <Button
            android:id="@+id/btn_AppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="AppBarLayout+toolbar+CoordinatorLayout" />

        <Button
            android:id="@+id/btn_AppBarLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text="模仿个人中心" />

        <Button
            android:id="@+id/btn_ActivityOptionsCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_style"
            android:text=" ActivityOptionsCompat实现Activity切换过渡动画" />



    </LinearLayout>
</ScrollView>