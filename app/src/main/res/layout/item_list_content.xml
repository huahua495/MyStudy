<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.example.administrator.allpoint.customview.CircleImageView
        android:id="@+id/iv_user_avator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_user_avator"
        android:layout_alignParentLeft="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_user_avator"
        android:layout_alignTop="@+id/iv_user_avator"
        android:layout_alignBottom="@id/iv_user_avator"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/an_red"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_indruce"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/bg_toolbar"
            android:gravity="center_vertical"
            />

    </LinearLayout>
</RelativeLayout>